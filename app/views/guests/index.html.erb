<p id="notice"><%= notice %></p>

<h1>Listing Guests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Token</th>
      <th>Check in</th>
      <th>Checkout</th>
      <th>Bluetooth</th>
      <th>Preferred language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.phone %></td>
        <td><%= guest.token %></td>
        <td><%= guest.check_in %></td>
        <td><%= guest.checkout %></td>
        <td><%= guest.bluetooth_id %></td>
        <td><%= guest.preferred_language %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

